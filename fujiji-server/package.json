{
  "name": "fujiji-server",
  "version": "1.0.0",
  "description": "Backend/server application for Fujiji",
  "scripts": {
    "dev": "NODE_ENV=develop nodemon src/app.js",
    "start": "NODE_ENV=production node src/app.js",
    "build": "echo \"Error: no build script specified\" && exit 1",
    "lint": "eslint --fix src/",
    "test": "NODE_ENV=test jest --runInBand --testTimeout=10000 --detectOpenHandles --forceExit",
    "prepare": "cd .. && husky install ./fujiji-server/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devin-efendy/fujiji.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devin-efendy/fujiji/issues"
  },
  "homepage": "https://github.com/devin-efendy/fujiji#readme",
  "dependencies": {
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "sequelize": "^6.17.0",
    "tedious": "^14.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.13",
    "supertest": "^6.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix ."
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
